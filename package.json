{
    "name": "testing-brain",
    "displayName": "Testing Brain",
    "description": "テスト網羅性を可視化するダッシュボード拡張機能",
    "version": "0.1.0",
    "publisher": "kudoaidesu",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Testing",
        "Visualization"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "testingBrain.open",
                "title": "Testing Brain: Open Dashboard",
                "icon": "$(beaker)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "testing-brain",
                    "title": "Testing Brain",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "testing-brain": [
                {
                    "type": "webview",
                    "id": "testingBrain.dashboard",
                    "name": "Dashboard"
                }
            ]
        }
    },
    "scripts": {
        "build:webview": "vite build",
        "build:extension": "node esbuild.config.mjs",
        "compile": "npm run build:webview && npm run build:extension",
        "watch:extension": "node esbuild.config.mjs --watch",
        "dev:webview": "vite build --watch",
        "package": "npm run compile && npx @vscode/vsce package --no-dependencies",
        "dev": "vite",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "npm run compile && node ./dist/test/runTest.js"
    },
    "dependencies": {
        "clsx": "^2.1.0",
        "framer-motion": "^11.0.0",
        "lucide-react": "^0.344.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.2.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.2.3",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/vscode": "^1.85.0",
        "@types/vscode-webview": "^1.57.5",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "@vscode/test-electron": "^2.5.2",
        "autoprefixer": "^10.4.18",
        "esbuild": "^0.20.2",
        "happy-dom": "^20.6.1",
        "jsdom": "^28.0.0",
        "mocha": "^11.7.5",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.4",
        "vitest": "^4.0.18"
    }
}
