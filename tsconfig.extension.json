{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/extension.ts",
        "src/TestingBrainPanel.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/App.tsx",
        "src/main.tsx",
        "src/components/**",
        "src/hooks/**",
        "src/i18n/**",
        "src/types/**",
        "src/styles/**",
        "src/utils/**",
        "src/data/**"
    ]
}